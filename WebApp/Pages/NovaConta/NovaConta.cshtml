@page "/novaconta"
@using WebApp.Models
@model ModelNovaConta
@{
    ViewData["Title"] = "Criação de Conta";
}

<script src="~/js/site.js"></script>
<div class="container-fluid d-flex justify-content-center pt-5">
    <div class="card col-5 border border-white">
        <div class="card-body">
            <div class="text-center">
                <h4 id="idCardTitulo" class="card-title p-2" aria-describedby="idCardSub">Criar nova conta</h4>
                <small id="idCardSub" class="p-4">Insira seus novos dados para começar a utilizar o Parapuãma!</small>
            </div>
            <div class="container d-flex justify-content-center mt-5">



                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "col-12" }))
                {
                    <div class="mb-3 row">
                        @Html.TextBox("NmLogin", "", new { @class = "form-control text-center", placeholder = "Login inédito" })
                    </div>
                    <div class="mb-3 row">
                        @Html.TextBox("NmApelido", "", new { @class = "form-control text-center", placeholder = "Apelido criativo" })
                    </div>
                    <div class="text-center row text-black-50 mt-3 mb-4 user-select-none">
                        <span>________________________________________________________________</span>
                    </div>
                    <div class="mb-3 row">
                        @Html.Password("NmSenha1", "", new { @class = "form-control text-center", placeholder = "Defina sua senha" })
                    </div>
                    <div class="mb-1 row">
                        @Html.Password("NmSenha2", "", new { @class = "form-control text-center", placeholder = "Repita sua senha" })
                    </div>
                    <div class="text-center row text-black-50 mt-3 mb-4 user-select-none">
                        <span>________________________________________________________________</span>
                    </div>
                    <div class="mb-3 row">
                        @Html.TextBox("NmEmail", "", new { @type = "email", @class = "form-control text-center", @placeholder = "Seu melhor e-mail" })
                    </div>
                    <div class="text-center row text-black-50 mt-3 mb-4 user-select-none">
                        <span>________________________________________________________________</span>
                    </div>
                    <div class="mt-3 mb-3 row">
                        <a class="btn btn-primary" asp-page="../Entrar/login" >Confirmar</a>
                        <!--<button type="submit" class="btn btn-primary">
                            Confirmar
                        </button>-->
                    </div>
                    <div class="mb-3 row">
                        <a href="#" class="btn btn-outline-primary" onclick="LimparNovaConta()">
                            Limpar campos
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
