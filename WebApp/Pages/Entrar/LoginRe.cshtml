@page "/loginn"
@model WebApp.Models.ModelLogin
@{
    ViewData["Title"] = "Entrar";
}

<div class="modal fade show" id="ModalLogin" tabindex="99">
    <div class="modal-dialog">
        <div class="modal-content m-1 border border-2 border-primary">
            <div class="card-body m-3 text-center">
                <h3 id="idCardSair" class="card-title pt-2" aria-describedby="idSubLogin">Realize o login</h3>
                <small id="idSubLogin" class="pt-2 text-muted">
                    Para acessar o conteúdo do site, realize login.
                </small>
                <div class="card-body d-flex justify-content-center pt-4">
                    <button type="button" class="btn btn-primary col-4" data-bs-dismiss="modal" onclick="">Entendi</button>
                </div>
            </div>
        </div>
    </div>
</div>

<a id="hidden" class="d-none" data-bs-toggle="modal" href="#ModalLogin">a</a>
<script>
    setTimeout(function () {
        document.getElementById('hidden').click();
    }, 100);
</script>

<div class="container-fluid d-flex justify-content-center pt-5">
        <div class="card col-9 border border-white">
            <div class="card-body">
                <div class="text-center">
                    <h4 id="idCardTitulo" class="card-title p-2" aria-describedby="idCardSub">Entrar</h4>
                    <small id="idCardSub" class="p-4">Insira seus dados para acessar sua conta ou crie uma nova!</small>
                </div>
                <div class="container d-flex justify-content-center mt-5">
                    <form class="col-6" method="POST">
                        <div class="mb-3 row">
                            <input type="text" class="form-control text-center" id="idLogin" placeholder="Login" asp-for="Login" />
                        </div>
                        <div class="mb-1 row">
                            <input type="password" class="form-control text-center" id="idSenha" placeholder="Senha" asp-for="Senha" />
                        </div>
                        <div class="text-center row text-black-50 mt-3 mb-4 user-select-none">
                            <span>________________________________________________________________</span>
                        </div>
                        <div class="mt-3 mb-3 row">
                            <button class="btn btn-primary" type="submit" asp-page="./LoginErro">
                                Acessar
                            </button>
                    </div>
                        <div class="mb-3 row">
                            <a class="btn btn-outline-primary" asp-page="../NovaConta/novaconta">
                                Criar conta
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>