@{
    Database.Gather g = new();
    Database.Out @out = new();
}

<ul class="nav nav-tabs" id="myTab2" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active user-select-none mt-5" id="fav-tab" data-bs-toggle="tab" data-bs-target="#fav" type="button"
                role="tab" aria-controls="fav" aria-selected="true">
            Seus favoritos
        </button>
    </li>
</ul>

<div class="mt-3 tab-content">
    <div class="tab-pane active border border-primary rounded" id="fav" role="tabpanel" aria-labelledby="fav-tab" style="height: 400px; overflow-y: scroll; overflow-x: hidden;">
        <div class="text-start m-1">
            <div class="row m-2">
                <div class="card border border-0">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-borderless align-middle">
                                <thead class="table-white">
                                    <tr>
                                        <th>Escopo</th>
                                        <th>Tema</th>
                                        <th>Líder</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody class="table-group-divider">
                                    @g.ForwardFavoritos(ViewBag.Id)
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>